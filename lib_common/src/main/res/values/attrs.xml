<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardSlider">
        <!-- Active card offset from start of RecyclerView. Default value is 50dp. -->
        <attr name="activeCardLeftOffset" format="dimension"/>
        <!-- Card width. Default value is 148dp. -->
        <attr name="cardWidth" format="dimension"/>
        <!-- Distance between cards. Default value is 12dp. -->
        <attr name="cardsGap" format="dimension"/>
        <!-- ViewUpdater implementation class. If not set, DefaultViewUpdater class is used. -->
        <attr name="viewUpdater" format="string"/>
    </declare-styleable>

    <declare-styleable name="ParticleView">
        <attr name="lines" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="particleColor" format="color" />
        <attr name="linesColor" format="color" />
        <attr name="particleCount" format="integer" />
        <attr name="minParticleRadius" format="integer" />
        <attr name="maxParticleRadius" format="integer" />
    </declare-styleable>

    <declare-styleable name="ReadableBottomBar">
        <attr name="rbb_tabs" format="reference" />
        <attr name="rbb_backgroundColor" format="color" />
        <attr name="rbb_indicatorColor" format="color" />
        <attr name="rbb_indicatorHeight" format="dimension" />
        <attr name="rbb_initialIndex" format="integer" />
        <attr name="rbb_textColor" format="color" />
        <attr name="rbb_iconColor" format="color" />
        <attr name="rbb_textSize" format="dimension" />
        <attr name="rbb_activeItemType" format="enum">
            <enum name="text" value="0" />
            <enum name="icon" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MultiSearchView">
        <attr name="searchTextStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MovingImageView" >
        <attr name="miv_speed" format="integer" />
        <attr name="miv_repetitions" format="integer" />
        <attr name="miv_max_relative_size" format="float" />
        <attr name="miv_min_relative_offset" format="float" />
        <attr name="miv_start_delay" format="integer" />
        <attr name="miv_load_on_create" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MovingImageViewTheme" >
        <attr name="movingImageViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="MaterialSearchView">
        <attr name="search_animate" format="boolean" />
        <attr name="search_ime_options" format="integer" />
        <attr name="search_input_type" format="integer" />
        <attr name="search_focusable" format="boolean" />
        <attr name="search_menu_position" format="integer" />
        <attr name="search_hint" format="string" />
        <attr name="search_text_color" format="color" />
        <attr name="search_icon_color" format="color" />
    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="lineSpacingExtra" format="dimension"/>
        <attr name="charSpacingExtra" format="dimension"/>
        <attr name="textLeftToRight" format="boolean"/>
        <attr name="underLineText" format="boolean"/>
        <attr name="underLineWidth" format="dimension"/>
        <attr name="underLineColor" format="color"/>
        <attr name="underlineOffset" format="dimension"/>
        <attr name="textHeightLightColor" format="color"/>
    </declare-styleable>
</resources>