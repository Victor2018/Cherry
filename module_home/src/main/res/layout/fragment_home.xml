<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.victor.cherry.viewmodel.HomeViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.8"
        android:paddingTop="@dimen/dp_68"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.victor.lib.common.view.widget.searchview.MultiSearchView
            android:id="@+id/multiSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mVpHome"
            app:searchTextStyle="@style/SearchTextStyle" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRvGank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_760"
            android:layout_marginTop="@dimen/dp_50"
            android:clipChildren="false"
            android:overScrollMode="never"
            app:viewUpdater="com.victor.lib.common.view.widget.cardslider.CardsUpdater"/>

        <TextSwitcher
            android:id="@+id/mTsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:paddingLeft="@dimen/dp_20"/>
    </LinearLayout>

</layout>