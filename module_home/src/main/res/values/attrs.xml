<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference"/>
        <attr name="mvAnimDuration" format="integer|reference"/>
        <attr name="mvTextSize" format="dimension|reference"/>
        <attr name="mvTextColor" format="color|reference"/>
        <attr name="mvSingleLine" format="boolean"/>
        <attr name="mvFont" format="reference"/>
        <attr name="mvGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CoordinatorLayout_Layout">
        <!--开始拦截下拉的滑动距离-->
        <attr name="layout_startInterceptDistance" format="dimension" />
        <!--能够进入二楼的滑动距离-->
        <attr name="layout_minTriggerOffset" format="dimension" />
        <!--触发下拉后的滑动距离衰减率-->
        <attr name="layout_dampingRatio" format="float" />
        <!--回退的动画时长-->
        <attr name="layout_rollbackDuration" format="integer" />
        <!--进入二楼的动画时长-->
        <attr name="layout_enterDuration" format="integer" />
        <!--退出二楼的动画时长-->
        <attr name="layout_exitDuration" format="integer" />
        <!--进入二楼的回调方法-->
        <attr name="layout_onEnterSecondFloor" format="string" />
        <!--退出二楼的回调方法-->
        <attr name="layout_onExitSecondFloor" format="string" />
    </declare-styleable>
</resources>
