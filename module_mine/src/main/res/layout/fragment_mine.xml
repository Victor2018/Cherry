<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_678"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/mCtlVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            app:title="@string/about_us"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
            <ImageView
                android:id="@+id/mIvAboutPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_mine"
                android:fitsSystemWindows="true"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                app:title="@string/about_us"
                android:fitsSystemWindows="true"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mNsvAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/dp_5">
                <TextView
                    android:id="@+id/mTvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="@dimen/dp_28"
                    android:textColor="@color/color_7C7C7C"
                    android:fontFamily="@font/zuo_an_lian_ren"
                    android:text="@string/description" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/dp_5">
                <TextView
                    android:id="@+id/mTvDownloadApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_30"
                    android:textColor="@color/color_7C7C7C"
                    android:fontFamily="@font/zuo_an_lian_ren"
                    android:textSize="@dimen/dp_28"
                    android:text="@string/download_app" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/dp_5">
                <TextView
                    android:id="@+id/mTvGmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_28"
                    android:textColor="@color/color_7C7C7C"
                    android:fontFamily="@font/zuo_an_lian_ren"
                    android:text="@string/gmail" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/dp_5">
                <TextView
                    android:id="@+id/mTvIssues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_28"
                    android:textColor="@color/color_7C7C7C"
                    android:fontFamily="@font/zuo_an_lian_ren"
                    android:text="@string/github_issues" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/dp_5">
                <TextView
                    android:id="@+id/mTvVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_30"
                    android:textSize="@dimen/dp_28"
                    android:textColor="@color/color_7C7C7C"
                    android:fontFamily="@font/zuo_an_lian_ren"
                    android:text="Versionï¼šv1.0.0" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/dp_5">
                <TextView
                    android:id="@+id/mTvSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_30"
                    android:textSize="@dimen/dp_28"
                    android:textColor="@color/color_7C7C7C"
                    android:fontFamily="@font/zuo_an_lian_ren"
                    android:text="@string/support_us" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_88"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_200"
                        android:src="@mipmap/img_wx"/>
                    <ImageView
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_200"
                        android:layout_marginLeft="@dimen/dp_66"
                        android:src="@mipmap/img_ali"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mFabGitHub"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@mipmap/ic_github"
        android:layout_margin="@dimen/dp_18"
        android:clickable="true"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
